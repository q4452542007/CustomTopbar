<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login11"
    tools:context="mapsoft.com.costomtopbar.activity.MainActivity">

    <ImageView
        android:id="@+id/user_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/user_edit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_view"
        android:inputType="text"
        android:hint="工号"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="195dp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textSize="30sp"
        android:background="@null"
        />
    <ImageView
        android:id="@+id/pwd_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_edit"/>
    <EditText
        android:id="@+id/pwd_edit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pwd_view"
        android:inputType="textPassword"
        android:layout_marginTop="75dp"
        android:layout_alignLeft="@+id/user_edit"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textSize="30sp"
        android:background="@null"
        android:hint="密码"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/user_view"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="85dp"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:rowCount="4">

        <Button
            android:id="@+id/num1"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/btn_nor_down"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/num2"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/num3"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/num4"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num5"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num6"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num7"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num8"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num9"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_nor_down"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num0"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/del"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_columnSpan="2"
            android:background="@drawable/btn_nor_down"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="40dp"
            />


    </GridLayout>



</RelativeLayout>