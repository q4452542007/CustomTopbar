<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login"
    tools:context="mapsoft.com.costomtopbar.activity.MainActivity">

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#292929">

        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/login"
            android:layout_margin="40dp"
            >
            <ImageView
                android:id="@+id/user_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/account"/>
            <EditText
                android:id="@+id/user_edit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:hint="工号"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="30sp"
                android:background="@null"
                android:layout_toRightOf="@id/user_view"
                android:layout_alignTop="@+id/user_view"
                />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pwd_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_layout"
        android:layout_alignLeft="@+id/user_layout"
        android:background="@color/login">
        <ImageView
            android:id="@+id/pwd_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/pwd"
            />
        <EditText
            android:id="@+id/pwd_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pwd_view"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/pwd_view"
            android:singleLine="true"
            android:textSize="30sp"
            android:background="@null"
            android:hint="密码"/>
    </RelativeLayout>

    <Button
        android:id="@+id/sign_in"
        android:layout_below="@+id/pwd_layout"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="40dp"
        android:background="@drawable/btn_sign_click"
        android:textSize="40dp"
        android:text="登入"/>

    <Button
        android:id="@+id/sign_out"
        android:layout_alignTop="@+id/sign_in"
        android:layout_toRightOf="@+id/sign_in"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:textSize="40dp"
        android:background="@drawable/btn_sign_click"
        android:text="登出"/>


    </RelativeLayout>



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="85dp"
        android:layout_marginTop="50dp"
        android:columnCount="3"
        android:rowCount="4">

        <Button
            android:id="@+id/num1"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/btn_nor_down"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/num2"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/num3"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/num4"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num5"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num6"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num7"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num8"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num9"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_nor_down"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/num0"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_nor_down"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/del"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_columnSpan="2"
            android:background="@drawable/btn_nor_down"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="40dp"
            />


    </GridLayout>



</RelativeLayout>