<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:background="@drawable/homepagenobar1">

    <RelativeLayout
        android:id="@+id/station_inf"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/bus_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="66dp"
            android:text="1路"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bus_path"
            android:layout_marginLeft="100dp"
            android:text="上行"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/bus_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bus_path"
            android:layout_below="@+id/bus_path"
            android:layout_marginTop="25dp"
            android:text="0.00"
            android:textColor="@color/speed"
            android:textSize="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_path"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="38dp"
            android:text="Km/H"
            android:textSize="40dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bus_speed"
            android:layout_below="@+id/bus_speed"
            android:layout_marginTop="41dp"
            android:text="本站："
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/current_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="38dp"
            android:text="公交总站"
            android:textColor="@color/current_station"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_station"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="38dp"
            android:text="下一站"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignTop="@+id/textView2"
            android:text="图软科技"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/mytime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/current_station"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="40dp"
            android:textSize="23sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/wifiView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bus_path"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/gpsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/wifiView"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginBottom="78dp">

        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</LinearLayout>